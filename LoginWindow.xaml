<Window x:Class="juwel.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:juwel"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Имя пользователя:" Margin="10,0,0,5"/>
            <TextBox x:Name="tblog" Margin="10,0,0,10"/>
            <TextBlock Text="Пароль:" Margin="10,0,0,5"/>
            <PasswordBox x:Name="tbpas" Margin="10,0,0,10"/>
            <Button Content="Войти" Click="LoginButton_Click" FontSize="20" Margin="10"/>
            <Button Content="Отмена"  FontSize="20" Click="btcan_Click" Margin="10"/>

            <Button Content="back" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
